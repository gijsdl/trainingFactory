{% extends 'base.html.twig' %}
{% block nav %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path('lid_home') }}">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ path('lid_les_overzicht', {date:"now"|date('y-m-d')}) }}">Inschrijven op les</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ path('lid_inschrijf_overzicht') }}">Overzicht inschrijvingen</a>
    </li>
    <li class="nav-item active">
        <a class="nav-link" data-toggle="modal" data-target="#wijzig" href="#">Gegevens wijzigen<span class="sr-only">(current)</span></a>


        <div class="modal fade" id="wijzig" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalCenterTitle">wijzig</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Wat wilt u wijzigen?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">cancel</button>
                        <button type="button" class="btn btn-danger" onclick="location.href='{{ path('lid_wijzig',{password:'true'}) }}';">wachtwoord wijzigen</button>
                        <button type="button" class="btn btn-danger" onclick="location.href='{{ path('lid_wijzig',{password:'false'}) }}';">profiel wijzigen</button>
                    </div>
                </div>
            </div>
        </div>
    </li>
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col">
            <h1 class="text-danger">Wijzig profiel</h1>
            <h4>{{ app.user.username }}</h4>
            {{ form_start(lidForm) }}
            {{ form_widget(lidForm) }}
            <button type="submit" class="btn btn-danger">Opslaan</button>
            {{ form_end(lidForm) }}
        </div>
    </div>
{% endblock %}